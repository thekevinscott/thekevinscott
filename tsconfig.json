{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/index.js"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"],
      "templates/*": ["src/teplates/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
